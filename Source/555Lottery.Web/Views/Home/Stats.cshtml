@model _555Lottery.Web.ViewModels.DrawViewModel[]
@{
    ViewBag.Title = "Global statistics";
}

<div class="logo-wrapper">
    <div id="biglogo">
        <a runat="server" href="~/">
            <img runat="server" src="~/Content/images/555_lottery_logo.png" alt="555 lottery" width="775" height="153" />
        </a>
    </div>
</div>
<div class="content-wrapper">
    <h2>Statistics</h2>

    <span>Number of players: 2344</span><br />
    <span>Number of tickets sold: 4331</span><br />
    <span>Income: 4200 BTC</span><br />
    <span>Payouts: 170 BTC</span><br />
    <br />

    <span>Favorite numbers:</span><span>13,33,42,2,44,1,9,23</span><br />

    <h3>Draws</h3>
    @foreach (_555Lottery.Web.ViewModels.DrawViewModel d in Model)
    { 
        <div class="statsline">
            <span><a runat="server" href="~/draw/@d.DrawCode">@d.DrawCode</a></span><span>@d.DeadlineUtc</span><span>@d.BitCoinAddress</span><span>@String.Format("{0:n0}", d.JackpotBTC) BTC</span><span> ($@String.Format("{0:n0}", d.JackpotUSD))</span><span>@d.WinningTicketSequence</span>
        </div>
    }

</div>
