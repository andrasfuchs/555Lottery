@model _555Lottery.Web.ViewModels.DrawViewModel
@{
    ViewBag.Title = "Details of draw";
}

<div class="logo-wrapper">
    <div id="biglogo">
        <a runat="server" href="~/">
            <img runat="server" src="~/Content/images/555_lottery_logo.png" alt="555 lottery" width="775" height="153" />
        </a>
    </div>
</div>
<div class="content-wrapper">
    <h2>Details of draw @Model.DrawCode</h2>

    <span>Number of players: 234</span><br />
    <span>Number of tickets sold: 433</span><br />
    <span>Income: 400 BTC</span><br />
    <span>Payouts: 120 BTC</span><br />
    <br />
    <span>Combination | Number of Hits | Total Winnings | Average Win</span><br />
    <span>5+1</span><br />
    <span>5+0</span><br />
    <span>4+1</span><br />
    <span>4+0</span><br />
    <span>3+1</span><br />
    <span>3+0</span> | <span>20</span> | <span>220 USD</span> | <span>22 USD</span><br />
    <span>2+1</span><br />
    <span>2+0</span><br />
    <span>1+1</span><br />
    <span>1+0</span><br />
    <span>0+1</span><br />
    <span>0+0</span><br />


    <div class="statsline">
        <span><a runat="server" href="~/draw/@Model.DrawCode">@Model.DrawCode</a></span><span>@Model.DeadlineUtc</span><span>@Model.BitCoinAddress</span><span>@String.Format("{0:n0}", Model.JackpotBTC) BTC</span><span> ($@String.Format("{0:n0}", Model.JackpotUSD))</span><span>@Model.WinningTicketSequence</span>
    </div>

