@model _555Lottery.DataModel.TicketLot

<div id="ticketsidebar">

    <div class="sidebarpager">
        <img runat="server" src="~/Content/images/sidebar_up.png" alt="/\" width="100" height="20" onclick="pageUp();" />
    </div>

    @foreach (_555Lottery.DataModel.Ticket t in Model.VisibleTickets)
    {
        if (t != null)
        {    
        <div class="sidebarticket @(t.Mode == _555Lottery.DataModel.TicketMode.Empty ? "emptyticket" : "") @(t == Model.SelectedTicket ? "selectedticket" : "")"  onclick="selectTicket(@(t.Index));">
            <img runat="server" src="~/Content/images/sidebarticket_@(t.Color).png" alt="#1" width="100" height="57" />
            @if (t.Mode != _555Lottery.DataModel.TicketMode.Empty)
            {
                <span class="@(t.Color)">@t.Index</span>
            }
        </div>
        }
        else
        {
        <div class="sidebarticket invisibleticket">
            <img runat="server" src="~/Content/images/sidebarticket_blue.png" alt="invisible" width="100" height="57" />
        </div>
        }
    }
    <div class="sidebarpager">
        <img runat="server" src="~/Content/images/sidebar_down.png" alt="\/" width="100" height="20" onclick="pageDown();" />
    </div>


</div>
<div class="ticketsticksleft">
    @foreach (_555Lottery.DataModel.Ticket t in Model.VisibleTickets)
    {
        if (t != null)
        {    
            <div class="stick border@(t.Color) @(t.Mode == _555Lottery.DataModel.TicketMode.Empty ? "emptyticket" : "") @(t == Model.SelectedTicket ? "selectedticket" : "")"></div>
        } else {
            <div class="stick invisibleticket"></div>
        }
    }
</div>
