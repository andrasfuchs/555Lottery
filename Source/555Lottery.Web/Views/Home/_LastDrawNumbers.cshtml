@model System.String

@{
    string[] numbers = Model.Split(new char[] { ',', '|' });
}

@if (numbers.Length == 6)
{ 
    <span class="lastdrawtext"></span>
    
    foreach (string c in numbers)
    {
        string charId = c.Replace(",", "separator").Replace(" ", "space").Replace("|", "line").Replace(".", "dot");
    
        <div class="lastdrawitem">
            <img runat="server" src="~/Content/images/ldn_@(charId).png" alt="@(c)" width="40" height="40" />
        </div>
    }
}
else
{    
    <span class="lastdrawtext">@Model</span>
    
    for (int i = 0; i < 6; i++)
    { 
        <div class="lastdrawitem paled"></div>
    }
}