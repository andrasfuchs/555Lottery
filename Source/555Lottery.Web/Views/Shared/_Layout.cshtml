<!DOCTYPE html>
<html lang="en" ondragstart="return false;" ondrop="return false;">
    <head>
        <meta charset="utf-8" />
        <title>@ViewBag.Title - 555 Lottery</title>
        <link href="~/favicon.ico" rel="shortcut icon" type="image/x-icon" />
        <meta name="viewport" content="width=1576, initial-scale=0.5, maximum-scale=0.75" />
        @Styles.Render("~/Content/css")
        @Scripts.Render("~/bundles/modernizr")
    </head>
    <body>
        <header>
        </header>
        <div id="body">
            @RenderBody()
        </div>
        <footer>
        </footer>

        @Scripts.Render("~/bundles/jquery")
        @RenderSection("scripts", required: false)

        <script>
            $(document).ready(function () {
                if (window.innerWidth < 1576) {
                    var scrollAmount = (1576 - window.innerWidth) / 2;

                    document.defaultView.scrollTo(scrollAmount, 0);
                }
            });
        </script>
    </body>
</html>
